@namespace ChrisMavrommatis.Blazor.Materialize.Components

@inherits MaterializeComponentBase

<div class="card @Color @_classes" @attributes=_attributes>
    @if (this.ImageContent is not null)
    {
        <div class="card-image">
            @this.ImageContent
        </div>
    }
    <div class="card-content">
        <span class="card-title">@this.Title</span>
        @this.ChildContent
    </div>
    @if (this.ActionContent is not null)
    {
        <div class="card-action">
            @this.ActionContent
        </div>
    }
</div>
