<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<UserSecretsId>Binacle_Net_Secrets</UserSecretsId>
		<DisableScopedCssBundling>true</DisableScopedCssBundling>
	</PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Serilog" Version="4.2.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\dep\Binacle.ViPaq\Binacle.ViPaq.csproj" />
	  <ProjectReference Include="..\Binacle.Net.Api.Kernel\Binacle.Net.Api.Kernel.csproj" />
	  <ProjectReference Include="..\Binacle.Net.Lib.Abstractions\Binacle.Net.Lib.Abstractions.csproj" />
	</ItemGroup>

	<ItemGroup>
		<UIFiles Include="wwwroot\**\*.*" />
		<ConfigFiles Include="Config_Files\**\*.json" />
	</ItemGroup>

	<!-- This target runs on every build -->
	<Target Name="CopyUIFiles" BeforeTargets="Build;Rebuild">
		<Message Importance="high" Text="UIFiles: @(UIFiles -> '%(FullPath)')" />
		<Message Importance="high" Text="Copying to: ..\Binacle.Net.Api\wwwroot\%(UIFiles.RecursiveDir)" />
		<Copy SourceFiles="@(UIFiles)" DestinationFolder="..\Binacle.Net.Api\wwwroot\%(UIFiles.RecursiveDir)" />
	</Target>

	<!-- This target runs on every build -->
	<Target Name="CopyConfigFiles" BeforeTargets="Build;Rebuild">
		<Message Importance="high" Text="ConfigFiles: @(ConfigFiles -> '%(FullPath)')" />
		<Message Importance="high" Text="Copying to: ..\Binacle.Net.Api\Config_Files\UiModule\" />
		<Copy SourceFiles="@(ConfigFiles)" DestinationFolder="..\Binacle.Net.Api\Config_Files\UiModule\" />
	</Target>

</Project>
