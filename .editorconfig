# To learn more about .editorconfig see https://aka.ms/editorconfigdocs
############################### 
# Core EditorConfig Options   # 
############################### 
root = true 

# All files 
[*] 
indent_style = tab
charset = utf-8-bom

# Code files 
[*.{cs,csx,vb,vbx}] 
indent_size = 4 
insert_final_newline = true 

# IDE0290: Use primary constructor
csharp_style_prefer_primary_constructors = false


# Config files
[*.{json, xml, http}]
indent_size = 2  
insert_final_newline = true 

